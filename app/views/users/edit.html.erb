<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
<%= stylesheet_link_tag 'home-page'%>

  <nav class="navbar navbar-expand-lg fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="#page-top">Go-deploy</a>
    </div>
  </nav>


  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100">
        <div class="col-lg-7 my-auto">
          <div class="header-content mx-auto">
            <h1 class="mb-5">Let's bring all the deployment related hassles to a single Platform </h1>
            <a href="#steps" class="btn btn-outline btn-xl js-scroll-trigger">Let's do this!</a>
          </div>
        </div>
      </div>
    </div>
  </header>


  <section class="steps bg-primary text-center" id="steps">
    <div class="container">
				<div class="card-deck">
          <div class="card purple-cards align-card p-1 pt-5">
            <h3 class="my-4 mx-2">1. Click on Generate Token.</h3>
            <h3 class="my-3 mx-2" >2. Create a new personal access token.</h3>
            <h3 class="my-3 mx-2">3. Paste the token.</h3></br>
          </div>

          <div class="card purple-cards p-4 " >
            <div class="form-group"></br>
              <img class="img-responsive m-1" src="/assets/gitlab_logo.png"  alt="paste" width="100px" height="100px"></br></br>
              <a target=_blank href="<%=Figaro.env.gitlab_base_url%>profile/personal_access_tokens" class="btn btn-outline btn-new">Generate Gitlab Token</a></br></br><br>
              <img class="rounded" src="/assets/paste.png"  alt="paste" width="100px" height="100px">
              </br></br>
              <%= form_for @user do |f|  %>
                <%= f.text_field :gitlab_token, class: "form-control", style: "background-color: white; font-size: 20px", placeholder: 'Paste your gitlab token'%> <br/>
            </div>
          </div>

          <div class="card purple-cards p-4" >
            <div class="form-group"></br>
                <img class="img-responsive m-1" src="/assets/jira_icon.png"  alt="paste" width="100px" height="100px"></br></br>
                <a target=_blank href="https://id.atlassian.com/manage/api-tokens" class="btn btn-outline btn-new">Generate Jira Token</a></br></br><br>
                <img class="rounded" src="/assets/paste.png"  alt="paste" width="100px" height="100px">
                </br></br>
                <%= f.text_field :jira_token, class: "form-control", style: "background-color: white; font-size: 20px", placeholder: 'Paste your Jira token'%> <br/>
                <%= f.submit "Let's Go", class: "btn btn-outline btn-new mt-1" %>
            </div>
          </div>
          <% end %>
       </div>
      </div>
  </section>


<footer>
  <div class="container"></div>
</footer>

<%= javascript_include_tag "home_page.js", "data-turbolinks-track" => true  %>
